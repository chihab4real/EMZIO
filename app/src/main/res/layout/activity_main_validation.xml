<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainValidation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="7dp"
        android:outlineAmbientShadowColor="#000000"
        android:layout_gravity="center_horizontal"

        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:id="@+id/titre"
            android:fontFamily="@font/sfpro"


            android:text="Validation d'une commande"
            android:layout_marginLeft="10dp"



            android:textAlignment="center"

            android:textColor="@color/black_2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#6DFD8270" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:background="@color/colorPri"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollx"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    
                    
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/test"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_margin="8dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="15sp"
                               
                                android:layout_height="wrap_content"
                                android:text="LIVRAISON"
                                />


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
                
                <androidx.cardview.widget.CardView

                    android:layout_margin="8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/sfpro"
                            android:textColor="@color/black_2"
                            android:text="DETAILS DE L'UTILISATEUR "
                            />


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:paddingRight="10dp"
                                android:layout_height="match_parent">

                                <TextView

                                    android:id="@+id/modifier_adresse"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:fontFamily="@font/sfpro"
                                    android:text="MODIFIER"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/test"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>



                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"

                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#6DFD8270"

                            />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textSize="13sp"

                                android:text="Nom et Prenom : "
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:id="@+id/livraison_username"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:text="UserName"
                                />
                        </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/sfpro"
                            android:textSize="13sp"

                            android:text="Adresse Postal : "
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/livraison_adresse"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/sfpro"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Adresse"

                            />

                    </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textSize="13sp"

                                android:text="Information supplémentaire : "
                                />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/livraison_infosup"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/sfpro"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="InfoSupp"
                            />

                        </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/sfpro"
                            android:textSize="13sp"

                            android:text="Wilaya :  "
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:id="@+id/livraison_wilaya"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/sfpro"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Wilaya"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/sfpro"
                            android:textSize="13sp"

                            android:text="Numero de Téléphones : "
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/livraison_phone"
                            android:fontFamily="@font/sfpro"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Phone"
                            android:layout_marginBottom="10dp"
                            />

                    </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_margin="8dp"

                    app:cardElevation="4dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/black_2"
                                android:text="Type de Livraison"
                                />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"

                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#6DFD8270"

                            />

                        <RadioGroup
                            android:layout_marginBottom="10dp"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <RadioButton

                                android:id="@+id/livraison_radio_domi"

                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Livraison à domicile"
                                />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:fontFamily="@font/sfpro"
                                android:text="Livrée au minimum aprés 7Jours."
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:orientation="horizontal"
                                 android:layout_height="wrap_content">
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:layout_marginLeft="30dp"
                                     android:fontFamily="@font/sfpro"
                                     android:textColor="@color/black_2"
                                     android:text="Frais de livraison : "
                                     />

                                 <TextView
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:layout_marginLeft="5dp"
                                     android:fontFamily="@font/sfpro"
                                     android:textColor="@color/test"
                                     android:textStyle="bold"
                                     android:text="1200 DA"
                                     />

                             </LinearLayout>

                            </LinearLayout>


                            <RadioButton
                                android:id="@+id/livraison_radio_boutique"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:text="Livraison dans une Boutique Officielle"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:fontFamily="@font/sfpro"
                                android:text="Livrée entre 3 et 6 jours."
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:fontFamily="@font/sfpro"
                                        android:textColor="@color/black_2"
                                        android:text="Frais de livraison : "
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/sfpro"
                                        android:textColor="@color/test"
                                        android:textStyle="bold"
                                        android:text="800 DA"
                                        />

                                </LinearLayout>

                            </LinearLayout>

                            <Spinner
                                android:spinnerMode="dialog"
                                android:prompt="@string/d"
                                android:id="@+id/spinner_nosboutique"
                                android:layout_width="match_parent"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/sfpro"
                                android:layout_height="wrap_content"


                                />

                        </RadioGroup>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_margin="8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/black_2"
                                android:text="PRIX TOTAL"
                                />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"

                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#6DFD8270"

                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/black_2"

                                android:text="Prix Total de touts les Produits"
                                />
                            <TextView
                                android:id="@+id/livraison_prix"
                                android:layout_width="match_parent"
                                android:layout_marginRight="15dp"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/black_2"

                                android:text="prixx"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/black_2"

                                android:text="Livraison"
                                />
                            <TextView
                                android:id="@+id/livraison_prixlivraison"
                                android:layout_width="match_parent"
                                android:layout_marginRight="15dp"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/test"
                                android:textStyle="bold"

                                android:text="prixx"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/black"
                                android:textSize="17dp"
                                android:text="Total"
                                />
                            <TextView
                                android:id="@+id/livraison_prixtotal"
                                android:layout_width="match_parent"
                                android:layout_marginRight="15dp"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/test"
                                android:textStyle="bold"
                                android:textSize="15sp"

                                android:text="prixxTotal"
                                />
                        </LinearLayout>


                        <Button
                            android:id="@+id/livraison_button_passer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Passer au Paiement"
                            android:textStyle="bold"
                            android:fontFamily="@font/sfpro"

                            android:backgroundTint="@color/test"
                            android:layout_gravity="center"

                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/paiement"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/test"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/sfpro"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="15sp"

                            android:layout_height="wrap_content"
                            android:text="PAIEMENT"
                            />


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_margin="8dp"
                    android:id="@+id/card_paiment"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/sfpro"
                            android:textColor="@color/black_2"
                            android:text="TYPE DE PAIEMENT"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"

                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#6DFD8270"

                            />

                        <RadioGroup
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <RadioButton
                                android:id="@+id/paiement_radio_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Paiement à la livraison"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:fontFamily="@font/sfpro"
                                android:text="Payez votre commande quand sera livrée à votre Destination"
                                />





                        </RadioGroup>


                        <Button
                            android:id="@+id/paiement_button_passer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Passer au Validation"
                            android:textStyle="bold"
                            android:fontFamily="@font/sfpro"

                            android:backgroundTint="@color/test"
                            android:layout_gravity="center"

                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/validation"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/test"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/sfpro"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="15sp"

                            android:layout_height="wrap_content"
                            android:text="VALIDATION"
                            />


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/card_validation"

                    android:layout_margin="8dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">




                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/black_2"
                                android:text="INFORMATIONS GÉNÉRALES"
                                />




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"

                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#6DFD8270"

                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textSize="13sp"
                                android:textColor="@color/black_2"
                                android:text="Client : "
                                />

                            <TextView
                                android:id="@+id/validation_username"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textSize="14sp"
                                android:textAlignment="textEnd"
                                android:textColor="@color/black"
                                android:text="username"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfpro"
                                android:textSize="13sp"
                                android:textColor="@color/black_2"
                                android:text="Type de Livraison : "
