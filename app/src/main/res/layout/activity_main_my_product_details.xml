<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMyProductDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="7dp"
        android:outlineAmbientShadowColor="#000000"
        android:layout_gravity="center_horizontal"

        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_gravity="center_vertical"
            android:id="@+id/titre"
            android:fontFamily="@font/sfpro"

            android:text="Details de mon Produit"

            android:textAlignment="center"

            android:textColor="@color/black_2"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#6DFD8270" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Galaxy S20"
                    android:textSize="20sp"
                    android:fontFamily="@font/sfpro"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"

                    />

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="300dp">
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/image_p"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informations de Produit"
                    android:textSize="20sp"
                    android:fontFamily="@font/sfpro"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"

                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"

                    android:padding="2dp"

                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="match_parent"
                            android:text="ID Produit"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />


                        <TextView

                            android:id="@+id/details_p_id"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:layout_marginTop="5dp"
                            android:gravity="top"
                            android:layout_marginBottom="5dp"
                            
                            android:textSize="12sp"


                            android:hint="Ecrire..."/>


                        <TextView

                            android:layout_width="match_parent"
                            android:text="Nom de Produit"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />


                        <TextView

                            android:id="@+id/details_p_nom"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:layout_marginTop="5dp"
                            android:gravity="top"
                            android:layout_marginBottom="5dp"
                            


                            android:hint="Ecrire..."/>

                        <TextView

                            android:layout_width="match_parent"
                            android:text="Marque du Produit"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />


                        <TextView

                            android:id="@+id/details_p_marque"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:layout_marginTop="5dp"
                            android:gravity="top"
                            android:layout_marginBottom="5dp"
                            


                            android:hint="Ecrire..."/>

                        <TextView

                            android:layout_width="match_parent"
                            android:text="Prix de Produit"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />


                        <TextView

                            android:id="@+id/details_p_prix"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:layout_marginTop="5dp"
                            android:gravity="top"
                            android:layout_marginBottom="5dp"
                            


                            android:hint="Ecrire..."/>


                        <TextView

                            android:layout_width="match_parent"
                            android:text="Type de Produit"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />


                        <TextView

                            android:id="@+id/details_p_type"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:layout_marginTop="5dp"
                            android:gravity="top"
                            android:layout_marginBottom="5dp"
                            


                            android:hint="Ecrire..."/>


                        <TextView

                            android:layout_width="match_parent"
                            android:text="Description"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />

                        <TextView

                            android:id="@+id/details_p_decs"
                            
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"

                            android:gravity="top"
                            android:layout_marginLeft="3dp"
                            android:textSize="14sp"


                            android:hint="Ecrire..."/>


                        <TextView

                            android:layout_width="match_parent"
                            android:text="Quantité"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />

                        <TextView

                            android:id="@+id/details_p_qt"

                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"

                            android:gravity="top"
                            android:layout_marginLeft="3dp"
                            android:textSize="14sp"


                            android:hint="Ecrire..."/>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_gravity="center"
                                android:id="@+id/modifier"
                                android:layout_width="80dp"

                                android:layout_height="40dp"

                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/sfpro"

                                android:text="Modifier"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                android:layout_marginBottom="15dp"
                                app:backgroundTint="@color/test"/>

                            <Button
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:id="@+id/supprimer"
                                android:layout_width="wrap_content"

                                android:layout_height="match_parent"

                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/sfpro"

                                android:text="Supprimer"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                android:layout_marginBottom="15dp"
                                app:backgroundTint="#D84B4B"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">



                            <Button
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:id="@+id/indispo"
                                android:layout_width="wrap_content"

                                android:layout_height="match_parent"

                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/sfpro"

                                android:text="Marqué comme indisponible"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                android:layout_marginBottom="15dp"
                                app:backgroundTint="#D84B4B"/>

                        </LinearLayout>




                    </LinearLayout>




                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tous les Photos"
                    android:textSize="20sp"
                    android:fontFamily="@font/sfpro"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />

                <HorizontalScrollView
                    android:scrollbars="none"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_margin="5dp"

                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card1"
                                android:layout_margin="3dp"
                                android:layout_gravity="center"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="120dp"
                                android:layout_height="120dp">
                                <RelativeLayout
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/image1"

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>




                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card2"
                                android:layout_margin="3dp"
                                android:layout_gravity="center"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="120dp"
                                android:layout_height="120dp">
                                <RelativeLayout
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/image2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card3"
                                android:layout_margin="3dp"
                                android:layout_gravity="center"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="120dp"
                                android:layout_height="120dp">
                                <RelativeLayout
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/image3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card4"
                                android:layout_margin="3dp"
                                android:layout_gravity="center"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="120dp"
                                android:layout_height="120dp">
                                <RelativeLayout
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/image4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        />
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>



                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Autres informations"
                    android:textSize="20sp"
                    android:fontFamily="@font/sfpro"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"

                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"

                    android:padding="2dp"

                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_marginLeft="5dp"


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"

                            android:clipChildren="true"
                            android:clipToPadding="true"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/ic_order" />

                            <TextView
                                android:id="@+id/demande_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/sfpro"

                                android:text="9999 Commandes"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="5dp"


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"

                            android:clipChildren="true"
                            android:clipToPadding="true"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/ic_heart_full" />

                            <TextView
                                android:id="@+id/likes_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/sfpro"

                                android:text="9999 Likes"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="5dp"


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"

                            android:clipChildren="true"
                            android:clipToPadding="true"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/ic_eye" />

                            <TextView
                                android:id="@+id/seen_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/sfpro"

                                android:text="9999 Vus"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </LinearLayout>




                </androidx.cardview.widget.CardView>


                <Button
                    android:layout_gravity="center"
                    android:id="@+id/ok"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"

                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/sfpro"

                    android:text="Terminé"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginBottom="30dp"
                    app:backgroundTint="@color/test"/>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>