<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="137dp"




    >

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"



                android:orientation="horizontal"




                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/panier_produit_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"


                            />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>









                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="120dp">



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:text="Marque du Produit : "
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@+id/panier_produit_marque"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"


                            android:fontFamily="@font/sfpro"
                            android:textColor="@color/black_2"

                            android:text="TextView"

                            android:textSize="12sp"
                            />








                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:textSize="10sp"
                            android:text="Nom de Produit : "
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@+id/panier_produit_nom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"



                            android:fontFamily="@font/sfpro"
                            android:text="TextView"
                            android:textColor="@color/black_2"

                            android:textSize="12sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:textSize="10sp"
                            android:text="Prix de Produit : "
                            android:layout_marginRight="5dp"
                            />
                        <TextView
                            android:id="@+id/panier_produit_prix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:fontFamily="@font/sfpro"
                            android:text="TextView"
                            android:textColor="@color/black_2"

                            android:textSize="12sp"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:textSize="10sp"
                            android:text="QuantitÃ© : "
                            android:layout_marginRight="5dp"
                            />
                        <Button
                            android:layout_marginLeft="5dp"
                            android:layout_width="40dp"
                            android:textStyle="bold"
                            android:layout_height="30dp"
                            android:fontFamily="@font/sfpro"
                            android:text="-"
                            android:textSize="14sp"
                            android:padding="0dp"
                            android:id="@+id/panier_button_moins"
                            android:backgroundTint="@color/black_2"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/panier_produit_quantite"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"


                            android:fontFamily="@font/sfpro"
                            android:text="TextView"
                            android:textColor="@color/black_2"

                            android:textSize="12sp"

                            />





                        <Button
                            android:layout_marginLeft="5dp"
                            android:layout_width="40dp"
                            android:id="@+id/panier_button_plus"
                            android:fontFamily="@font/sfpro"
                            android:textStyle="bold"
                            android:layout_height="30dp"
                            android:text="+"
                            android:textSize="14sp"
                            android:padding="0dp"
                            android:backgroundTint="@color/test"
                            android:textColor="@color/white"
                            />



                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">




                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content">

                            <Button
                                android:layout_marginRight="10dp"
                                android:id="@+id/panier_button_delet"
                                android:layout_width="70dp"
                                android:layout_height="20dp"

                                android:layout_gravity="end"
                                android:backgroundTint="#FD7070"
                                android:padding="0dp"


                                android:fontFamily="@font/sfpro"
                                android:textStyle="bold"

                                android:insetTop="0dp"


                                android:insetBottom="0dp"
                                android:text="Supprimer"
                                android:textColor="@color/white"
                                android:textSize="7sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>




                    </LinearLayout>




                </LinearLayout>




            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>