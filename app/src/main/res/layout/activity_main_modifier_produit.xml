<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainModifierProduit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="7dp"
        android:outlineAmbientShadowColor="#000000"
        android:layout_gravity="center_horizontal"

        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_gravity="center_vertical"
            android:id="@+id/titre"
            android:fontFamily="@font/sfpro"

            android:text="Modifier un Produit"

            android:textAlignment="center"

            android:textColor="@color/black_2"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#6DFD8270" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:textColor="@color/black"

                    android:padding="2dp"

                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingLeft="10dp"

                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView

                            android:layout_width="match_parent"
                            android:text="Nom de Produit"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent"
                            />


                        <RelativeLayout
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:background="#6DFD8270"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_margin="1dp"
                                android:background="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/modifier_nom"
                                    android:layout_marginLeft="3dp"
                                    android:background="@android:color/transparent"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"

                                    android:fontFamily="@font/sfpro"

                                    android:inputType="text"
                                    android:textSize="15sp"



                                    android:hint="Ecrire..."/>
                            </RelativeLayout>
                        </RelativeLayout>








                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"

                    android:padding="2dp"

                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView

                            android:layout_width="match_parent"
                            android:text="Prix de Produit"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />


                        <RelativeLayout
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:background="#6DFD8270"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_margin="1dp"
                            android:background="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="wrap_content"

                            android:orientation="horizontal"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/modifier_prix"
                                android:background="@android:color/transparent"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="3dp"
                                android:fontFamily="@font/sfpro"

                                android:inputType="numberDecimal"


                                android:hint="Ecrire..."
                                />
                            <TextView
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:text="DA"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/sfpro"
                                android:textColor="@color/black_2"
                                android:textStyle="italic"
                                android:layout_height="20dp"/>
                        </LinearLayout>

                        </RelativeLayout>

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"

                android:padding="2dp"

                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_width="match_parent"
                        android:text="Description"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black_2"
                        android:textSize="16sp"
                        android:fontFamily="@font/sfpro"
                        android:layout_height="match_parent" />


                    <RelativeLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:background="#6DFD8270"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_margin="1dp"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">




                            <com.google.android.material.textfield.TextInputEditText

                                android:id="@+id/modifier_decs"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfpro"

                                android:gravity="top"
                                android:layout_marginLeft="3dp"
                                android:textSize="14sp"


                                android:hint="Ecrire..."/>

                        </RelativeLayout>

                    </RelativeLayout>
                    <TextView
                        android:layout_marginBottom="10dp"
                        android:id="@+id/decs_test"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/sarala"
                        android:text="Descritpion INVALIDE"
                        android:textColor="#CAFF0000"


                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"

                    android:padding="2dp"

                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView

                            android:layout_width="match_parent"
                            android:text="Quantité"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />


                        <RelativeLayout
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:background="#6DFD8270"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_margin="1dp"
                                android:background="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">




                                <com.google.android.material.textfield.TextInputEditText

                                    android:id="@+id/modifier_qt"
                                    android:background="@android:color/transparent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sfpro"

                                    android:gravity="top"
                                    android:inputType="numberDecimal"
                                    android:layout_marginLeft="3dp"
                                    android:textSize="14sp"


                                    android:hint="Ecrire..."/>

                            </RelativeLayout>

                        </RelativeLayout>
                        <TextView
                            android:layout_marginBottom="10dp"
                            android:id="@+id/decs_test"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/sarala"
                            android:text="Descritpion INVALIDE"
                            android:textColor="#CAFF0000"


                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Autres informations"
                    android:textSize="20sp"
                    android:fontFamily="@font/sfpro"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"

                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"

                    android:padding="2dp"

                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:layout_width="match_parent"
                            android:text="Marque du Produit"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />


                        <com.google.android.material.textfield.TextInputEditText

                            android:id="@+id/modifier_marque"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:layout_marginTop="5dp"
                            android:gravity="top"
                            android:layout_marginBottom="5dp"
                            android:enabled="false"


                            android:hint="Ecrire..."/>

                        <TextView

                            android:layout_width="match_parent"
                            android:text="Type de Produit"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />


                        <com.google.android.material.textfield.TextInputEditText

                            android:id="@+id/modifier_type"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:layout_marginTop="5dp"
                            android:gravity="top"
                            android:layout_marginBottom="5dp"
                            android:enabled="false"


                            android:hint="Ecrire..."/>





                        <TextView

                            android:layout_width="match_parent"
                            android:text="ID Produit"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro"
                            android:layout_height="match_parent" />


                        <com.google.android.material.textfield.TextInputEditText

                            android:id="@+id/modifier_ID"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro"
                            android:layout_marginTop="5dp"
                            android:gravity="top"
                            android:layout_marginBottom="5dp"
                            android:enabled="false"
                            android:textSize="12sp"


                            android:hint="Ecrire..."/>

                    </LinearLayout>




                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photos"
                    android:textSize="20sp"
                    android:fontFamily="@font/sfpro"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />

                <HorizontalScrollView
                    android:scrollbars="none"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_margin="5dp"

                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card1"
                                android:layout_margin="3dp"
                                android:layout_gravity="center"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="120dp"
                                android:layout_height="120dp">
                                <RelativeLayout
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/image1"

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>




                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card2"
                                android:layout_margin="3dp"
                                android:layout_gravity="center"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="120dp"
                                android:layout_height="120dp">
                                <RelativeLayout
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/image2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card3"
                                android:layout_margin="3dp"
                                android:layout_gravity="center"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="120dp"
                                android:layout_height="120dp">
                                <RelativeLayout
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/image3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card4"
                                android:layout_margin="3dp"
                                android:layout_gravity="center"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="120dp"
                                android:layout_height="120dp">
                                <RelativeLayout
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/image4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        />
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>



                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>



                <Button
                    android:layout_gravity="center"
                    android:id="@+id/modifier_et_valider"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"

                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/sfpro"

                    android:text="Valider et Modifier"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginBottom="30dp"
                    app:backgroundTint="@color/test"/>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>